{
  "name": "keypears-tauri",
  "description": "KeyPears client for desktop and mobile.",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build:icons": "tsx build-icons.ts",
    "dev": "react-router dev",
    "dev:old": "vite",
    "build": "react-router build && mv dist/client/* dist/ && rmdir dist/client",
    "format": "prettier --write .",
    "lint": "eslint .",
    "typecheck": "react-router typegen && tsc --noEmit",
    "test": "vitest run",
    "build:old": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "./tauri-dev.sh",
    "tauri:prod": "rm -rf .react-router && KEYPEARS_ENV=production tauri dev",
    "db:migrate": "drizzle-kit generate",
    "db:delete": "rm -f ~/Library/Application\\ Support/keypears-tauri/keypears.db*"
  },
  "dependencies": {
    "@keypears/api-server": "workspace:^",
    "@keypears/lib": "workspace:^",
    "@keypears/pow5": "workspace:^",
    "@orpc/client": "^1.12.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@react-router/fs-routes": "^7.10.1",
    "@react-router/node": "^7.10.1",
    "@react-router/serve": "^7.10.1",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-os": "^2.3.2",
    "@tauri-apps/plugin-sql": "^2.3.0",
    "@webbuf/fixedbuf": "^3.5.0",
    "@webbuf/secp256k1": "^3.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.6",
    "isbot": "^5.1.32",
    "lucide-react": "^0.544.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-router": "^7.10.1",
    "safe-routes": "^1.0.18",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@react-router/dev": "^7.10.1",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.17",
    "@tauri-apps/cli": "^2.9.5",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitejs/plugin-react": "^5.0.4",
    "better-sqlite3": "^12.4.1",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.37.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "react-router-devtools": "^5.1.3",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15",
    "wait-on": "^9.0.1"
  }
}
