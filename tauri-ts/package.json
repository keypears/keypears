{
  "name": "keypears-tauri",
  "description": "KeyPears client for desktop and mobile.",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build:icons": "tsx build-icons.ts",
    "dev": "react-router dev",
    "dev:old": "vite",
    "build": "react-router build && mv dist/client/* dist/ && rmdir dist/client",
    "format": "prettier --write .",
    "lint": "eslint .",
    "typecheck": "react-router typegen && tsc --noEmit",
    "test": "vitest run",
    "build:old": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "rm -rf .react-router && KEYPEARS_ENV=development tauri dev",
    "tauri:prod": "rm -rf .react-router && KEYPEARS_ENV=production tauri dev",
    "db:migrate": "drizzle-kit generate",
    "db:delete": "rm -f ~/Library/Application\\ Support/keypears-tauri/keypears.db*"
  },
  "dependencies": {
    "@keypears/api-server": "workspace:^",
    "@keypears/lib": "workspace:^",
    "@radix-ui/react-alert-dialog": "1.1.15",
    "@radix-ui/react-checkbox": "1.3.3",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-dropdown-menu": "2.1.16",
    "@radix-ui/react-progress": "1.1.7",
    "@radix-ui/react-slider": "1.3.6",
    "@radix-ui/react-slot": "1.2.3",
    "@radix-ui/react-tabs": "1.1.13",
    "@react-router/fs-routes": "^7.9.3",
    "@react-router/node": "^7.9.3",
    "@react-router/serve": "^7.9.3",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-sql": "2.3.0",
    "@webbuf/secp256k1": "3.0.28",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "0.44.6",
    "isbot": "^5.1.31",
    "lucide-react": "^0.544.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.9.3",
    "safe-routes": "^1.0.18",
    "tailwind-merge": "^3.3.1",
    "ulid": "3.0.1",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "9.37.0",
    "@react-router/dev": "^7.9.3",
    "@tailwindcss/typography": "0.5.19",
    "@tailwindcss/vite": "^4.1.14",
    "@tauri-apps/cli": "^2.8.4",
    "@types/better-sqlite3": "7.6.13",
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "8.45.0",
    "@typescript-eslint/parser": "8.45.0",
    "@vitejs/plugin-react": "^5.0.4",
    "better-sqlite3": "12.4.1",
    "drizzle-kit": "0.31.5",
    "eslint": "9.37.0",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.23.1",
    "eslint-plugin-promise": "7.2.1",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "react-router-devtools": "^5.1.3",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "3.2.4",
    "wait-on": "9.0.1"
  }
}
