{
  "name": "@keypears/api-server",
  "version": "1.0.0",
  "description": "KeyPears API server library - TypeScript implementation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/client.js",
      "types": "./dist/client.d.ts"
    }
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.17.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b tsconfig.src.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "typecheck": "tsc -b",
    "typecheck:src": "tsc -b tsconfig.src.json --noEmit",
    "typecheck:test": "tsc -b tsconfig.test.json --noEmit",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:server": "tsx test/server.ts",
    "test:manual": "tsx test/manual-test.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.2",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.37.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "express": "^5.1.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@keypears/lib": "workspace:*",
    "@orpc/client": "^1.9.2",
    "@orpc/server": "^1.9.2",
    "@webbuf/blake3": "^3.0.28",
    "@webbuf/fixedbuf": "^3.0.28",
    "@webbuf/webbuf": "^3.0.28",
    "drizzle-orm": "^0.44.6",
    "pg": "^8.16.3",
    "ulid": "^3.0.1",
    "zod": "^4.1.11"
  }
}
