{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KeyPears",
  "version": "0.1.0",
  "identifier": "keypears-tauri",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../tauri-ts/dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "KeyPears",
        "width": 480,
        "height": 800,
        "titleBarStyle": "Transparent"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
