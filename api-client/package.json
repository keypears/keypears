  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.37.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vitest": "^2.1.8"
  }
