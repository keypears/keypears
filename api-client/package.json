{
  "name": "@keypears/api-client",
  "version": "1.0.0",
  "description": "KeyPears API client and contract definitions",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
